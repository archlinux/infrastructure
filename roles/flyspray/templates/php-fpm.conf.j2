[global]
error_log = syslog
daemonize = no

[{{ flyspray_user }}]
listen = /run/php-fpm/flyspray.socket
listen.owner = {{ flyspray_user }}
listen.group = http
listen.mode = 0660

pm = dynamic
pm.max_children = 15
pm.start_servers = 5
pm.min_spare_servers = 2
pm.max_spare_servers = 5
pm.max_requests = 2000

php_admin_value[open_basedir] = {{ flyspray_dir }}
php_admin_value[opcache.memory_consumption] = 128
php_admin_value[opcache.interned_strings_buffer] = 8
php_admin_value[opcache.max_accelerated_files] = 200
php_admin_value[opcache.revalidate_freq] = 60
php_admin_value[opcache.fast_shutdown] = 1
php_admin_value[disable_functions] = passthru, exec, proc_open, shell_exec, system, popen
